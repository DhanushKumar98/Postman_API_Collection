					"listen": "prerequest",
					"script": {
						"exec": [
							"var random = Math.random().toString(36).substring(2);\r",
							"\r",
							"var username = \"jim\" + random;\r",
							"var useremail = \"jim\"+ random + \"@gmail.com\";\r",
							"\r",
							"pm.environment.set(\"name_env\",username);\r",
							"pm.environment.set(\"useremail_env\",useremail);\r",
							"\r",
							""
